dataset_paths:
  nyuv2: "dataset/nyuv2"
  cityscapes: "dataset/cityscapes"

training_params:
  mode: "none"
  port: "none"

  # Model parameters
  task: "all" # all, seg, depth, normal
  dataset: "nyuv2" # nyuv2, cityscapes
  network: "split" # split, mtan
  weight: "equal" # equal, dwa, uncert
  grad_method: "none" # graddrop, pcgrad, cagrad
  with_noise: false # with noise prediction task

  # Training parameters
  total_epochs: 10
  batch_size: 8
  gpu: 1 # gpu ID
  seed: 42

model_merging:
  method: "sum"
  pt_model_file: "models/mtl_model.pt"
  ft_model_files:
    - "models/split/full_train/seg_model.pt"
    - "models/split/full_train/depth_model.pt"
  dataset: "nyuv2" # nyuv2, cityscapes
  network: "split" # split, mtan
  
  num_tv_coef_points: 5
  specify_lambda: None

