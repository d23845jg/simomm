dataset_paths:
  nyuv2: "dataset/nyuv2"
  cityscapes: "dataset/cityscapes"

training_params:
  mode: "none"
  port: "none"

  # Model parameters
  task: "all" # all, seg, depth, normal
  dataset: "nyuv2" # nyuv2, cityscapes
  network: "split" # split, mtan
  weight: "equal" # equal, dwa, uncert
  grad_method: "none" # graddrop, pcgrad, cagrad
  with_noise: false # with noise prediction task

  # Training parameters
  total_epochs: 1
  batch_size: 4
  gpu: 0 # gpu ID
  seed: 42

  # Auto-lambda specific
  autol_init: 0.1 # initialisation for auto-lambda
  autol_lr: 1e-4 # learning rate for auto-lambda

model_merging:
  method: "sum"
  pt_model_file: "models/mtl_model.pt"
  ft_model_files:
    - "models/seg_model.pt"
  dataset: "nyuv2" # nyuv2, cityscapes
  network: "split" # split, mtan
  
  num_tv_coef_points: 21
  specify_lambda: None

